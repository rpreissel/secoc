{
  "skills": {
    "feature-branch-guard": {
      "enabled": true,
      "protected-branches": ["main", "master"],
      "allowed-patterns": ["feature/*", "bugfix/*", "hotfix/*"],
      "auto-push": true,
      "ticket-sources": {
        "github": {
          "enabled": true,
          "org": "your-org",
          "repo": "your-repo"
        },
        "jira": {
          "enabled": false,
          "url": "https://your-domain.atlassian.net",
          "project-key": "PROJ"
        }
      },
      "branch-name-max-length": 50,
      "require-ticket-number": false
    },
    "commit-size-guard": {
      "enabled": true,
      "max-files": 15,
      "max-lines": 500,
      "max-file-lines": 300,
      "similarity-threshold": 0.3,
      "auto-split": true,
      "warning-only": true
    }
  },
  "permission": {
    "skill": {
      "feature-branch-guard": "allow",
      "commit-size-guard": "allow"
    }
  }
}
